<div class="search_container pull-right">

  <%= form_tag companies_search_path, method: :post do %>

    <table><tr>
      <td><%= text_field_tag 'search', "", :class => "input-medium form-control", :placeholder => "Search companies..." %></td>
      <td><button type="submit" class="btn btn-primary btn-small" style="margin-left: 10px"><span class="glyphicon glyphicon-search"></span></button></td>
    </tr></table>

  <% end %>

</div>

<h1>Listing companies</h1>
<em>Listing <strong><%= @companies.count() %></strong> companies</em><br /><br />

<table class="table table-condensed table-hover model-list">
  <thead style="font-size: 14px">
    <tr>
      <th>ID</th>
      <th>Symbol</th>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %> 
        <tr>
          <td><strong><%= company.id %>:</strong></td>
          <td><%= link_to company do %><%= company.name %><% end %></td>
          <td><%= company.full_name %>&nbsp;&nbsp;<% if company.strict_increasing %><span class="label label-success">Strictly increasing</span><% end %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
