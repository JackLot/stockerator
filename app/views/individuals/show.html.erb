<h2 style="margin: 0"><%= @individual.name %></h2>

<div class="indent">
<p>
  <strong>Cash:</strong>
  <%= @individual.cash %>
</p>

<p>
  <strong>Investable:</strong>
  <%= @individual.investable_id %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @individual.start_date.strftime("%m-%d-%Y") %>
</p>

<p>
  <strong>Stock in COMPANIES </strong>(company, amount, buy_date, date_sold):<br />
  <em>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Listing <strong><%= @individual.individual_company_investments.count() %></strong> investments</em>

	<% @individual.individual_company_investments.each do |i| %>
    <table><tr>
    	<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><strong><span class="label label-info"><%= i.company.name %></spam> </strong>&nbsp;</td>
      <td>$<%= i.amount %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= i.buy_date.strftime("%m-%d-%Y") %>&nbsp;&nbsp;&nbsp;&nbsp;</td>
      <td><%= i.sell_date %></td>
    </tr></table>
  <% end %>

</p>
</div>
<%= link_to 'Edit', edit_individual_path(@individual) %> |
<%= link_to 'Back', individuals_path %>
<%= link_to '(Show Investable)', controller: :investables, action: :show, :id => @individual.investable_id %>
