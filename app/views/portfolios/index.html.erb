<h1>Listing portfolios</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Isindividual</th>
      <th>Investable</th>
      <th>Cash</th>
      <th>investable_id</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @portfolios.each do |portfolio| %>
      <tr>
        <td><strong><%= portfolio.id %></strong>: &nbsp;&nbsp;</td>
        <td><%= portfolio.name %>&nbsp;&nbsp;</td>
        <td><%= portfolio.isIndividual %>&nbsp;&nbsp;</td>
        <td><%= portfolio.investable_id %>&nbsp;&nbsp;</td>
        <td><%= portfolio.cash.format %>&nbsp;&nbsp;</td>
        <td><%= portfolio.investable_id %></td>
        <td><%= link_to 'Show', portfolio %></td>
        <td><%= link_to 'Edit', edit_portfolio_path(portfolio) %></td>
        <td><%= link_to 'Destroy', portfolio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

